<?xml version="1.0"?>
<Container version="2">
  <Name>OpenCloud (Heinlein) - syprix</Name>
  <Repository>opencloudeu/opencloud-rolling:latest</Repository>
  <Registry>https://hub.docker.com/r/opencloudeu/opencloud-rolling</Registry>
  <Network>bridge</Network>
  <Privileged>false</Privileged>
  <PostArgs>server</PostArgs>
  <Icon>https://raw.githubusercontent.com/opencloud-eu/website/main/assets/images/logo_icon.svg</Icon>
  <Project>https://opencloud.eu/de</Project>
  <Support>https://github.com/syprix/unraid-opencloud/blob/main/README.md</Support>
  <Overview>Modulares Template für OpenCloud. Externe Services: Reverse Proxy, Redis, OnlyOffice. Vor Erststart README befolgen und init ausführen.</Overview>
  <WebUI>http://[IP]:[PORT:9200]/</WebUI>

  <Config Name="Appdata-Pfad (Config)" Target="/etc/opencloud" Default="/mnt/user/appdata/opencloud/config" Mode="rw" Description="Pfad für OpenCloud-Konfig. Muss zum init passen." Type="Path" Display="always" Required="true" Mask="false"></Config>
  <Config Name="Daten-Pfad (Data)" Target="/var/lib/opencloud" Default="/mnt/user/appdata/opencloud/data" Mode="rw" Description="Pfad für OpenCloud-Daten. Muss zum init passen." Type="Path" Display="always" Required="true" Mask="false"></Config>

  <Config Name="WebUI Port" Target="9200" Default="9200" Mode="tcp" Description="Interner Port von OpenCloud (Reverse Proxy zeigt hierauf)." Type="Port" Display="always" Required="true" Mask="false"></Config>

  <Config Name="Externe URL (Reverse Proxy)" Type="Variable" Target="OC_URL" Default="https://cloud.deine-domain.de" Description="Öffentliche URL hinter dem Proxy." Display="always" Required="true" Mask="false"></Config>
  <Config Name="Interne Bind-Adresse" Type="Variable" Target="PROXY_HTTP_ADDR" Default="0.0.0.0:9200" Description="Interne Bind-Adresse." Display="advanced" Required="true" Mask="false"></Config>
  <Config Name="Insecure Mode (für Reverse Proxy)" Type="Variable" Target="OC_INSECURE" Default="true" Description="true, wenn TLS am Proxy endet (Unraid &lt;-&gt; Proxy = http)." Display="advanced" Required="true" Mask="false"></Config>

  <Config Name="Redis Server Host:Port" Type="Variable" Target="OC_PERSISTENT_STORE_NODES" Default="" Description="z.B. 192.168.1.10:6379" Display="advanced" Required="false" Mask="false"></Config>
  <Config Name="Redis Store Typ" Type="Variable" Target="OC_PERSISTENT_STORE" Default="redis-sentinel" Description="Empfohlen: redis-sentinel" Display="advanced" Required="false" Mask="false"></Config>
  <Config Name="Redis Cache Host:Port" Type="Variable" Target="OC_CACHE_STORE_NODES" Default="" Description="Optional separater Cache-Redis" Display="advanced" Required="false" Mask="false"></Config>
  <Config Name="Redis Cache Typ" Type="Variable" Target="OC_CACHE_STORE" Default="redis-sentinel" Description="Empfohlen: redis-sentinel" Display="advanced" Required="false" Mask="false"></Config>

  <Config Name="Office Produkt" Type="Variable" Target="COLLABORATION_APP_PRODUCT" Default="OnlyOffice" Description="Auf 'OnlyOffice' lassen." Display="advanced" Required="false" Mask="false"></Config>
  <Config Name="OnlyOffice Server URL" Type="Variable" Target="COLLABORATION_APP_ADDR" Default="" Description="z.B. http://192.168.1.11:8080" Display="always" Required="false" Mask="false"></Config>
  <Config Name="OnlyOffice (Insecure)" Type="Variable" Target="COLLABORATION_APP_INSECURE" Default="true" Description="true, wenn OnlyOffice im LAN via http erreichbar ist." Display="advanced" Required="false" Mask="false"></Config>

  <Config Name="Admin Passwort (nur für Init)" Type="Variable" Target="IDM_ADMIN_PASSWORD" Default="" Description="Nur beim manuellen 'init' im Terminal verwendet (README)." Display="advanced" Required="false" Mask="true"></Config>
</Container>
